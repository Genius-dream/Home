    {
        "version": "0.2.0",
        "configurations": [
            {
                "name": "(gdb) Launch",
                "type": "cppdbg",
                "request": "launch",
                "program": "${fileDirname}/${fileBasenameNoExtension}.exe", // 必须与tasks.json的输出文件一致[5](@ref)
                "args": [],
                "stopAtEntry": false,
                "cwd": "${fileDirname}",
                "environment": [],
                "externalConsole": false, // 若程序需要输入，建议设为true[5](@ref)
                "MIMode": "gdb",
                "miDebuggerPath": "C:/MinGW/bin/gdb.exe", // 请确保路径正确[2](@ref)
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ],
                "preLaunchTask": "C/C++: gcc.exe build active file" // 必须与tasks.json的label一致[3](@ref)
            }
        ]
    }